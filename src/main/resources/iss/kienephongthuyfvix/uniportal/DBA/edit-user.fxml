<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" spacing="15" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="25" left="30" right="30" top="25" />
    </padding>

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Chỉnh sửa người dùng" />

    <HBox alignment="CENTER">
    <GridPane hgap="10" vgap="10">
        <Label text="User ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="userIdField" disable="true" promptText="User ID" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Username: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="usernameField" promptText="Tên đăng nhập" text="Username" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>
    </HBox>

    <Label style="-fx-font-weight: bold;" text="Danh sách các role của user" />
    <ListView fx:id="roleListView" prefHeight="120" prefWidth="250" />

    <HBox alignment="CENTER" spacing="10">
        <ChoiceBox fx:id="roleChoiceBox" prefWidth="150" />
        <Button fx:id="addRoleButton" style="-fx-font-weight: bold;" text="➕" />
    </HBox>

    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="saveButton" prefHeight="25.0" prefWidth="66.0" style="-fx-background-color: #18c27b; -fx-text-fill: white; -fx-font-weight: bold;" text="💾 Lưu" />
        <Button fx:id="cancelButton" prefHeight="25.0" prefWidth="63.0" style="-fx-background-color: white;" styleClass="white-button" stylesheets="@../style.css" text="❌ Hủy">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
    </HBox>
</VBox>
