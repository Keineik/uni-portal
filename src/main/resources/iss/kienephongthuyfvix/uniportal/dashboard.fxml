<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="iss.kienephongthuyfvix.uniportal.controller.DashboardController"
            prefHeight="720.0" prefWidth="1280.0">

    <children>
        <BorderPane fx:id="window" prefHeight="720.0" prefWidth="1280.0">

            <left>
                <AnchorPane prefWidth="200.0" styleClass="linear-grad" stylesheets="@style.css">
                    <children>
                        <Label layoutX="44.0" layoutY="14.0" text="UniPortal" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <FontIcon iconColor="WHITE" iconLiteral="fas-graduation-cap" layoutX="10.0" layoutY="40.0">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </FontIcon>
                        <VBox fx:id="sidebarContainer" layoutY="80.0" layoutX="10.0" spacing="10.0" prefWidth="180.0" />
                    </children>
                </AnchorPane>
            </left>

            <center>
                <AnchorPane>
                    <StackPane fx:id="contentArea" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
                </AnchorPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
