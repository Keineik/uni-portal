<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="iss.kienephongthuyfvix.uniportal.controller.DashboardController">

    <children>
        <BorderPane fx:id="window" prefHeight="720.0" prefWidth="1280.0">

            <left>
                <AnchorPane prefWidth="200.0" styleClass="linear-grad" stylesheets="@style.css">
                    <children>
                        <Label layoutX="44.0" layoutY="14.0" text="UniPortal" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <FontIcon iconColor="WHITE" iconLiteral="fas-graduation-cap" layoutX="10.0" layoutY="40.0">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </FontIcon>
                        <VBox fx:id="sidebarContainer" layoutX="10.0" layoutY="80.0" prefWidth="180.0" spacing="10.0" />
                    </children>
                </AnchorPane>
            </left>

            <center>
                <AnchorPane>
                    <StackPane fx:id="contentArea" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                </AnchorPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
