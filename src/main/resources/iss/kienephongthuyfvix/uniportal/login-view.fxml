<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="iss.kienephongthuyfvix.uniportal.controller.LoginController"
            prefHeight="400.0" prefWidth="600.0">
    <center>
        <VBox alignment="CENTER" spacing="15" maxWidth="350">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="University Management System" style="-fx-font-weight: bold;">
                <font>
                    <Font size="18"/>
                </font>
            </Label>

            <Label text="Login" style="-fx-font-size: 16px;"/>

            <Separator/>

            <GridPane vgap="10" hgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="90" prefWidth="90"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>

            <Label fx:id="errorMessageLabel" textFill="RED" visible="false"/>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button text="Reset" onAction="#handleReset"/>
                <Button text="Login" defaultButton="true" onAction="#handleLogin"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="10"/>
            </padding>
            <Label text="Â© 2025 University Management System"/>
        </HBox>
    </bottom>
</BorderPane>