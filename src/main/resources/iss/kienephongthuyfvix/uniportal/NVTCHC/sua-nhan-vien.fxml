<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="iss.kienephongthuyfvix.uniportal.controller.NVTCHC.SuaNhanVien"
            stylesheets="@../style.css"
            prefHeight="500.0" prefWidth="600.0">

    <top>
        <StackPane style="-fx-background-color: linear-gradient(to bottom, #FFA07A, #FF6347);" prefHeight="70">
            <Label text="Chỉnh sửa nhân viên"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </StackPane>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>

            <VBox spacing="12" styleClass="light-white-box" maxWidth="500">
                <HBox spacing="10">
                    <Label text="Mã NV:" styleClass="field-label"/>
                    <TextField fx:id="txtMaNV" styleClass="field-input" editable="false"/>
                </HBox>

                <HBox spacing="10">
                    <Label text="Họ tên:" styleClass="field-label"/>
                    <TextField fx:id="txtHoTen" styleClass="field-input"/>
                </HBox>

                <HBox spacing="10">
                    <Label text="Phái:" styleClass="field-label"/>
                    <ComboBox fx:id="cbPhai" styleClass="field-input"/>
                </HBox>

                <HBox spacing="10">
                    <Label text="Ngày sinh:" styleClass="field-label"/>
                    <DatePicker fx:id="dpNgaySinh" styleClass="field-input"/>
                </HBox>

                <HBox spacing="10">
                    <Label text="Lương:" styleClass="field-label"/>
                    <TextField fx:id="txtLuong" styleClass="field-input"/>
                </HBox>

                <HBox spacing="10">
                    <Label text="Phụ cấp:" styleClass="field-label"/>
                    <TextField fx:id="txtPhuCap" styleClass="field-input"/>
                </HBox>

                <HBox spacing="10">
                    <Label text="Điện thoại:" styleClass="field-label"/>
                    <TextField fx:id="txtSDT" styleClass="field-input"/>
                </HBox>

                <HBox spacing="10">
                    <Label text="Vai trò:" styleClass="field-label"/>
                    <TextField fx:id="txtVaiTro" styleClass="field-input"/>
                </HBox>

                <HBox spacing="10">
                    <Label text="Mã ĐV:" styleClass="field-label"/>
                    <TextField fx:id="txtMaDV" styleClass="field-input"/>
                </HBox>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Lưu" fx:id="btnLuu" styleClass="primary-btn"/>
            <Button text="Hủy" fx:id="btnHuy" styleClass="cancel-btn"/>
        </HBox>
    </bottom>
</BorderPane>
